<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="an3enterprises.codemaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EditingActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TranslatorActivity"
            android:label="@string/use_translator"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".DetranslatorActivity"
            android:label="@string/use_detranslator"
            android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity android:name=".InfoAndTips"></activity>
    </application>

</manifest>